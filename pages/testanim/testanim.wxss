/* pages/testanim/testanim.wxss */

.view_add_type {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  flex-direction: column;
  z-index: 999;
  border-radius: 120rpx;
  background: #2A7EFB;
  justify-content: center;
  align-items: center;
  box-shadow: 0 3px 20px 0 rgba(158, 187, 230, 0.60);
}

.view_add_item_type {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 96rpx;
  box-shadow: 0 3px 20px 0 rgba(158, 187, 230, 0.60);
  z-index: 999;
  opacity: 0;
  background: #2A7EFB;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.view_add_item_two_type {
  position: fixed;
  bottom: 80rpx;
  border-radius: 96rpx;
  right: 40rpx;
  width: 96rpx;
  height: 96rpx;
  box-shadow: 0 3px 20px 0 rgba(158, 187, 230, 0.60);
  z-index: 999;
  display: flex;
  flex-direction: column;
  opacity: 0;
  background: #fff;
  justify-content: center;
  align-items: center;
}

.img_add {
  width: 44rpx;
  height: 44rpx;
}

.img_add_two_type {
  width: 44rpx;
  height: 44rpx;
  transform: rotate(-180deg)
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 90;
}

/* 弹出层 */

.modalDlg {
  width: 70%;
  position: fixed;
  top: 120px;
  left: 0;
  right: 0;
  z-index: 99;
  margin: 0 auto;
  background: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}